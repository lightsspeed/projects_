{
    "name": "my-static-website",
    "version": "1.0.0",
    "description": "A simple static website with HTML, CSS, and JS",
    "scripts": {
      "lint:js": "eslint src/**/*.js",
      "lint:css": "stylelint src/**/*.css",
      "test": "jest",
      "build:css": "postcss src/styles.css -o dist/styles.min.css",
      "build:js": "uglifyjs src/app.js -o dist/app.min.js",
      "build": "npm run build:css && npm run build:js"
    },
    "devDependencies": {
      "eslint": "^8.0.0",
      "stylelint": "^15.0.0",
      "stylelint-config-standard": "^34.0.0",
      "jest": "^29.0.0",
      "postcss": "^8.0.0",
      "postcss-cli": "^10.0.0",
      "autoprefixer": "^10.0.0",
      "cssnano": "^6.0.0",
      "uglify-js": "^3.0.0"
    }
  }